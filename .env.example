# postgres
POSTGRES_DB=identity_archive
POSTGRES_USER=identity_archive
POSTGRES_PASSWORD=troque-isto-por-uma-senha-forte

# conexao (host/porta) para o postgres do docker-compose
DB_HOST=localhost
DB_PORT=5432

# http
HTTP_ADDR=:8080
HTTP_PORT=8080
LOG_LEVEL=info

# r2 (simulacao)
R2_ENDPOINT=https://fake.r2.cloudflarestorage.com
R2_BUCKET=identity-archive

# dsn para a aplicacao (exemplo)
DB_DSN=postgres://identity_archive:troque-isto-por-uma-senha-forte@localhost:5432/identity_archive?sslmode=disable

# cloudflare r2 (simulacao de interface; nao usar valores reais aqui)
R2_KEYS={"account_id":"fake-account-id","access_key_id":"fake-access-key","secret_access_key":"fake-secret","bucket":"identity-archive","endpoint":"https://fake.r2.cloudflarestorage.com"}

# chaves de criptografia (exemplo; gere e rotacione com cuidado)
ENCRYPTION_KEYS={"active":"key_v1_base64","previous":["key_v0_base64"]}
